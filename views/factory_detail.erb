<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FactorySeeder - <%= @factory_name %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .back-link {
            color: white;
            text-decoration: none;
            font-size: 1.1em;
            opacity: 0.9;
        }
        
        .back-link:hover {
            opacity: 1;
        }
        
        .content {
            padding: 30px;
        }
        
        .factory-info {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .factory-info h3 {
            color: #495057;
            margin-bottom: 15px;
        }
        
        .info-item {
            margin-bottom: 10px;
        }
        
        .info-label {
            font-weight: bold;
            color: #495057;
        }
        
        .trait-tag {
            display: inline-block;
            background: #007bff;
            color: white;
            padding: 4px 12px;
            border-radius: 16px;
            font-size: 0.9em;
            margin: 2px;
        }
        
        .form-section {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 20px;
        }
        
        .form-section h3 {
            color: #495057;
            margin-bottom: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            display: block;
            font-weight: bold;
            color: #495057;
            margin-bottom: 8px;
        }
        
        .form-input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ced4da;
            border-radius: 6px;
            font-size: 1em;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
        }
        
        .checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn {
            display: inline-block;
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-right: 10px;
        }
        
        .btn-primary {
            background: #007bff;
            color: white;
        }
        
        .btn-primary:hover {
            background: #0056b3;
        }
        
        .btn-secondary {
            background: #6c757d;
            color: white;
        }
        
        .btn-secondary:hover {
            background: #545b62;
        }
        
        .preview-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }
        
        .preview-content {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            padding: 15px;
            font-family: monospace;
            font-size: 0.9em;
            max-height: 300px;
            overflow-y: auto;
        }
        
        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }
        
        .result {
            margin-top: 20px;
            padding: 15px;
            border-radius: 6px;
            display: none;
        }
        
        .result.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .result.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .attributes-section {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 15px;
            background: #f9f9f9;
            margin-top: 10px;
        }
        
        .attribute-item {
            margin-bottom: 12px;
        }
        
        .attribute-item:last-child {
            margin-bottom: 0;
        }
        
        .attribute-label {
            display: block;
            font-weight: 500;
            margin-bottom: 5px;
            color: #333;
            font-size: 14px;
        }
        
        .attribute-input {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }
        
        .attribute-input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
        
        .attribute-input::placeholder {
            color: #999;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/" class="back-link">‚Üê Back to Factories</a>
            <h1>üè≠ <%= @factory_name %></h1>
            <p>Generate seeds for this factory</p>
        </div>
        
        <div class="content">
            <div class="factory-info">
                <h3>Factory Information</h3>
                <div class="info-item">
                    <span class="info-label">Class:</span> <%= @factory[:class_name] %>
                </div>
                
                <% if @factory[:traits].any? %>
                    <div class="info-item">
                        <span class="info-label">Available Traits:</span><br>
                        <% @factory[:traits].each do |trait| %>
                            <span class="trait-tag"><%= trait %></span>
                        <% end %>
                    </div>
                <% end %>
                
                <% if @factory[:associations].any? %>
                    <div class="info-item">
                        <span class="info-label">Associations:</span> <%= @factory[:associations].map { |a| a[:name] }.join(', ') %>
                    </div>
                <% end %>
            </div>
            
            <div class="form-section">
                <h3>Generate Seeds</h3>
                <form id="generateForm">
                    <div class="form-group">
                        <label class="form-label" for="count">Number of records:</label>
                        <input type="number" id="count" name="count" class="form-input" value="1" min="1" max="1000">
                    </div>
                    
                    <% if @factory[:traits].any? %>
                        <div class="form-group">
                            <label class="form-label">Traits to apply:</label>
                            <div class="checkbox-group">
                                <% @factory[:traits].each do |trait| %>
                                    <div class="checkbox-item">
                                        <input type="checkbox" id="trait_<%= trait %>" name="traits" value="<%= trait %>">
                                        <label for="trait_<%= trait %>"><%= trait %></label>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                    
                    <% if @factory[:attributes].any? %>
                        <div class="form-group">
                            <label class="form-label">Custom Attributes (optional):</label>
                            <div class="attributes-section">
                                <% @factory[:attributes].each do |attr| %>
                                    <div class="attribute-item">
                                        <label for="attr_<%= attr[:name] %>" class="attribute-label">
                                            <%= attr[:name] %> (<%= attr[:type] %>):
                                        </label>
                                        <input type="text" 
                                               id="attr_<%= attr[:name] %>" 
                                               name="attributes[<%= attr[:name] %>]" 
                                               class="form-input attribute-input"
                                               placeholder="Leave empty to use factory default">
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                    
                    <button type="submit" class="btn btn-primary">Generate Seeds</button>
                    <button type="button" class="btn btn-secondary" onclick="previewData()">Preview Data</button>
                </form>
                
                <div class="loading" id="loading">
                    <p>Generating seeds...</p>
                </div>
                
                <div class="result" id="result"></div>
            </div>
            
            <div class="preview-section" id="previewSection" style="display: none;">
                <h3>Data Preview</h3>
                <div class="preview-content" id="previewContent"></div>
            </div>
        </div>
    </div>
    
    <script>
        document.getElementById('generateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const traits = Array.from(formData.getAll('traits')).join(',');
            
            // Collect custom attributes
            const attributes = {};
            const attributeInputs = document.querySelectorAll('input[name^="attributes["]');
            attributeInputs.forEach(input => {
                const attrName = input.name.match(/attributes\[([^\]]+)\]/)[1];
                const value = input.value.trim();
                if (value !== '') {
                    attributes[attrName] = value;
                }
            });
            
            const data = {
                factory: '<%= @factory_name %>',
                count: formData.get('count'),
                traits: traits,
                attributes: attributes
            };
            
            // Show loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('result').style.display = 'none';
            
            fetch('/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('loading').style.display = 'none';
                const resultDiv = document.getElementById('result');
                resultDiv.style.display = 'block';
                
                if (data.success) {
                    resultDiv.className = 'result success';
                    resultDiv.innerHTML = `<strong>‚úÖ Success!</strong> ${data.message}`;
                } else {
                    resultDiv.className = 'result error';
                    resultDiv.innerHTML = `<strong>‚ùå Error:</strong> ${data.error}`;
                }
            })
            .catch(error => {
                document.getElementById('loading').style.display = 'none';
                const resultDiv = document.getElementById('result');
                resultDiv.style.display = 'block';
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `<strong>‚ùå Error:</strong> ${error.message}`;
            });
        });
        
        function previewData() {
            const formData = new FormData(document.getElementById('generateForm'));
            const traits = Array.from(formData.getAll('traits')).join(',');
            
            // Collect custom attributes
            const attributes = {};
            const attributeInputs = document.querySelectorAll('input[name^="attributes["]');
            attributeInputs.forEach(input => {
                const attrName = input.name.match(/attributes\[([^\]]+)\]/)[1];
                const value = input.value.trim();
                if (value !== '') {
                    attributes[attrName] = value;
                }
            });
            
            const params = new URLSearchParams();
            if (traits) params.append('traits', traits);
            if (Object.keys(attributes).length > 0) {
                params.append('attributes', JSON.stringify(attributes));
            }
            
            fetch(`/api/factory/<%= @factory_name %>/preview?${params.toString()}`)
                .then(response => response.json())
                .then(data => {
                    const previewSection = document.getElementById('previewSection');
                    const previewContent = document.getElementById('previewContent');
                    
                    if (data.success) {
                        previewContent.textContent = JSON.stringify(data.attributes, null, 2);
                        previewSection.style.display = 'block';
                    } else {
                        alert('Error: ' + data.error);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
        }
    </script>
</body>
</html>
