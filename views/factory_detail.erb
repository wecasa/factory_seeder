<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FactorySeeder - <%= @factory_name %></title>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/" class="back-link">‚Üê Back to Factories</a>
            <h1>üè≠ <%= @factory_name %></h1>
            <p>Generate seeds for this factory</p>
        </div>
        
        <div class="content">
            <div class="factory-info">
                <h3>Factory Information</h3>
                <div class="info-item">
                    <span class="info-label">Class:</span> <%= @factory[:class_name] %>
                </div>
                
                <% if @factory[:traits].any? %>
                    <div class="info-item">
                        <span class="info-label">Available Traits:</span><br>
                        <% @factory[:traits].each do |trait| %>
                            <span class="trait-tag"><%= trait %></span>
                        <% end %>
                    </div>
                <% end %>
                
                <% if @factory[:associations].any? %>
                    <div class="info-item">
                        <span class="info-label">Associations:</span> <%= @factory[:associations].map { |a| a[:name] }.join(', ') %>
                    </div>
                <% end %>
            </div>
            
            <div class="form-section">
                <h3>Generate Seeds</h3>
                <form id="generateForm">
                    <div class="form-group">
                        <label class="form-label" for="count">Number of records:</label>
                        <input type="number" id="count" name="count" class="form-input" value="1" min="1" max="1000">
                    </div>
                    
                    <% if @factory[:traits].any? %>
                        <div class="form-group">
                            <label class="form-label">Traits to apply:</label>
                            <div class="checkbox-group">
                                <% @factory[:traits].each do |trait| %>
                                    <div class="checkbox-item">
                                        <input type="checkbox" id="trait_<%= trait %>" name="traits" value="<%= trait %>">
                                        <label for="trait_<%= trait %>"><%= trait %></label>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                    
                    <% if @factory[:attributes].any? %>
                        <div class="form-group">
                            <label class="form-label">Custom Attributes (optional):</label>
                            <div class="attributes-section">
                                <% @factory[:attributes].each do |attr| %>
                                    <div class="attribute-item">
                                        <label for="attr_<%= attr[:name] %>" class="attribute-label">
                                            <%= attr[:name] %> (<%= attr[:type] %>):
                                        </label>
                                        <input type="text" 
                                               id="attr_<%= attr[:name] %>" 
                                               name="attributes[<%= attr[:name] %>]" 
                                               class="form-input attribute-input"
                                               placeholder="Leave empty to use factory default">
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                    
                    <button type="submit" class="btn btn-primary">Generate Seeds</button>
                    <button type="button" class="btn btn-secondary" onclick="previewData()">Preview Data</button>
                </form>
                
                <div class="loading" id="loading">
                    <p>Generating seeds...</p>
                </div>
                
                <div class="result" id="result"></div>
            </div>
            
            <div class="preview-section" id="previewSection" style="display: none;">
                <h3>Data Preview</h3>
                <div class="preview-content" id="previewContent"></div>
            </div>
        </div>
    </div>
    
    <script>
        document.getElementById('generateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const traits = Array.from(formData.getAll('traits')).join(',');
            
            // Collect custom attributes
            const attributes = {};
            const attributeInputs = document.querySelectorAll('input[name^="attributes["]');
            attributeInputs.forEach(input => {
                const attrName = input.name.match(/attributes\[([^\]]+)\]/)[1];
                const value = input.value.trim();
                if (value !== '') {
                    attributes[attrName] = value;
                }
            });
            
            const data = {
                factory: '<%= @factory_name %>',
                count: formData.get('count'),
                traits: traits,
                attributes: attributes
            };
            
            // Show loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('result').style.display = 'none';
            
            fetch('/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('loading').style.display = 'none';
                const resultDiv = document.getElementById('result');
                resultDiv.style.display = 'block';
                
                if (data.success) {
                    resultDiv.className = 'result success';
                    resultDiv.innerHTML = `<strong>‚úÖ Success!</strong> ${data.message}`;
                } else {
                    resultDiv.className = 'result error';
                    resultDiv.innerHTML = `<strong>‚ùå Error:</strong> ${data.error}`;
                }
            })
            .catch(error => {
                document.getElementById('loading').style.display = 'none';
                const resultDiv = document.getElementById('result');
                resultDiv.style.display = 'block';
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `<strong>‚ùå Error:</strong> ${error.message}`;
            });
        });
        
        function previewData() {
            const formData = new FormData(document.getElementById('generateForm'));
            const traits = Array.from(formData.getAll('traits')).join(',');
            
            // Collect custom attributes
            const attributes = {};
            const attributeInputs = document.querySelectorAll('input[name^="attributes["]');
            attributeInputs.forEach(input => {
                const attrName = input.name.match(/attributes\[([^\]]+)\]/)[1];
                const value = input.value.trim();
                if (value !== '') {
                    attributes[attrName] = value;
                }
            });
            
            const params = new URLSearchParams();
            if (traits) params.append('traits', traits);
            if (Object.keys(attributes).length > 0) {
                params.append('attributes', JSON.stringify(attributes));
            }
            
            fetch(`/api/factory/<%= @factory_name %>/preview?${params.toString()}`)
                .then(response => response.json())
                .then(data => {
                    const previewSection = document.getElementById('previewSection');
                    const previewContent = document.getElementById('previewContent');
                    
                    if (data.success) {
                        previewContent.textContent = JSON.stringify(data.attributes, null, 2);
                        previewSection.style.display = 'block';
                    } else {
                        alert('Error: ' + data.error);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
        }
    </script>
</body>
</html>
