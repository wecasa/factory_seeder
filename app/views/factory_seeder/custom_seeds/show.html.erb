<div class="container">
    <div class="seed-card-body">
        <% if @seed.parameters.any? %>
            <div class="parameters-section">
                <h4>Parameters</h4>
                <%= form_tag create_custom_seede_path(@seed_name), method: :post, class: "seed-form" do %>
                    <div class="form-fields">
                        <% @seed.parameters.each do |param_name, param| %>
                            <div class="form-group">
                                <label for="<%= param %>"><%= param.to_s.humanize %></label>
                                <%= text_field_tag "attributes[#{param}]", nil, 
                                    id: param, 
                                    class: "form-control",
                                    placeholder: "Enter #{param.to_s.humanize.downcase}" %>
                            </div>
                        <% end %>
                    </div>
                    <div class="form-actions">
                        <%= submit_tag "Generate Seed", class: "btn btn-primary" %>
                    </div>
                <% end %>
            </div>
        <% else %>
            <div class="no-parameters">
                <p>No parameters required</p>
                <%= form_tag create_custom_seede_path(@seed_name), method: :post, class: "seed-form" do %>
                    <%= submit_tag "Generate Seed", class: "btn btn-primary" %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>